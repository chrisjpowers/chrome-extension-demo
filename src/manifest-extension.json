{
  "name": "Image Saver",
  "version": "0.1.0",
  "manifest_version": 2,
  "description": "Saves images, as the name might imply",
  "browser_action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "js/vendor/jquery.js",
        "js/content-script.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "js/vendor/underscore.js",
      "js/background.js"
    ]
  },
  "permissions": [
    "tabs"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}

